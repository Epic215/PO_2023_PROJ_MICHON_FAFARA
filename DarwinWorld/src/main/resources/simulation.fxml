                    <TextField fx:id="initialEnergyInput" promptText="Initial animal energy" styleClass="textInput"/>
                    <TextField fx:id="breedEnergyInput" promptText="Breed energy input" styleClass="textInput"/>
                </HBox>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="7" >
                <Button fx:id="startButton" text="Start" onAction="#onSimulationStartClicked" styleClass="textInput"/>
            </VBox>
        </children>
        <columnConstraints>
