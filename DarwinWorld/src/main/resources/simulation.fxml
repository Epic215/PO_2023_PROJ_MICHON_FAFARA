            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="borderBox">
                <Label fx:id="worldConfigGlobeLabel" text="Configure world:" textAlignment="CENTER" />
                <HBox>
                    <RadioButton fx:id="worldConfigGlobe" text="Globe" styleClass="radioButton">
                        <toggleGroup>
                            <ToggleGroup fx:id="groupWorld"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="worldConfigGlobeTides" text="Tides" styleClass="radioButton">
                        <toggleGroup>
